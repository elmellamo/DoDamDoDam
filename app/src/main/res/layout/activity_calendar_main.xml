<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/calendarBtn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF7D2"
    android:paddingTop="10dp"

    >


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="353dp"
        android:layout_height="56dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:srcCompat="@drawable/calendarlogo"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="10dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/scroll_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"

        >



    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/white_rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/postitimg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calendarView">


        <TextView
            android:id="@+id/diaryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:textSize="30dp"
            android:letterSpacing="0.15"

            android:fontFamily="@font/font_1"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintBottom_toTopOf="@+id/loverEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dday_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/diaryTextView"
            android:textSize="25dp"
            android:letterSpacing="0.15"

            android:fontFamily="@font/font_1"
            android:lineSpacingExtra="10dp"
            android:paddingTop="40dp"
            android:gravity="center"
            android:lines="3"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/loverEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:lines="3"
            android:textSize="20dp"
            android:fontFamily="@font/font_1"
            android:hint="일정이 비어있습니다."
            android:letterSpacing="0.15"

            android:inputType="textMultiLine"
            android:maxLines="3"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/contextEditText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/diaryTextView" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@+id/loverEditText"
            app:layout_constraintEnd_toEndOf="@+id/loverEditText"
            app:layout_constraintStart_toStartOf="@+id/loverEditText"
            app:layout_constraintTop_toTopOf="@+id/loverEditText">

            <TextView
                android:id="@+id/loverText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:maxLines="3"
                android:lines="3"
                android:textSize="20dp"
                android:letterSpacing="0.15"

                android:fontFamily="@font/font_1"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/loverEditText"
                app:layout_constraintEnd_toEndOf="@+id/loverEditText"
                app:layout_constraintStart_toStartOf="@+id/loverEditText"
                app:layout_constraintTop_toTopOf="@+id/loverEditText" />

        </ScrollView>


        <EditText
            android:id="@+id/contextEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:ems="10"
            android:maxLines="3"
            android:lines="3"
            android:textSize="20dp"
            android:letterSpacing="0.15"

            android:fontFamily="@font/font_1"
            android:hint="나의 일정이 비어있습니다."
            android:inputType="textMultiLine"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@+id/save_Btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/loverEditText" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="@+id/contextEditText"
            app:layout_constraintEnd_toEndOf="@+id/contextEditText"
            app:layout_constraintStart_toStartOf="@+id/contextEditText"
            app:layout_constraintTop_toTopOf="@+id/contextEditText">

            <TextView
                android:id="@+id/todaytext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:letterSpacing="0.15"

                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:lines="3"
                android:textSize="20dp"
                android:fontFamily="@font/font_1"
                android:maxLines="3"
                android:scrollbars="vertical"
                app:layout_constraintBottom_toBottomOf="@+id/contextEditText"
                app:layout_constraintEnd_toEndOf="@+id/contextEditText"
                app:layout_constraintStart_toStartOf="@+id/contextEditText"
                app:layout_constraintTop_toTopOf="@+id/contextEditText" />

        </ScrollView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/save_Btn"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:background="@drawable/white_rounded_button"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="10dp"
            android:text="저 장"
            android:textSize="20dp"
            android:fontFamily="@font/font_1"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contextEditText"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cha_Btn"
            android:background="@drawable/white_rounded_button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="수 정"
            android:textSize="20dp"
            android:fontFamily="@font/font_1"
            android:visibility="invisible"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintBaseline_toBaselineOf="@+id/save_Btn"
            app:layout_constraintEnd_toStartOf="@+id/del_Btn"
            app:layout_constraintStart_toStartOf="parent"/>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/del_Btn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/white_rounded_button"
            android:padding="12dp"
            android:text="삭 제"
            android:textSize="20dp"
            android:fontFamily="@font/font_1"
            android:visibility="invisible"
            app:layout_constraintBaseline_toBaselineOf="@+id/cha_Btn"
            app:layout_constraintStart_toEndOf="@id/cha_Btn"
            app:layout_constraintEnd_toEndOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/imageBtnLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:layout_constraintVertical_weight="0.05"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="#FFF7D2"
        >

        <ImageButton
            android:id="@+id/settingBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:contentDescription="설정"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toRightOf="@id/calendarBtn2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/settingicon" />

        <ImageButton
            android:id="@+id/calendarBtn2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:contentDescription="달력"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/albumBtn"
            app:layout_constraintRight_toLeftOf="@id/settingBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/calendaricon" />

        <ImageButton
            android:id="@+id/albumBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:contentDescription="사진"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/questionBtn"
            app:layout_constraintRight_toLeftOf="@id/calendarBtn2"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/albumicon" />

        <ImageButton
            android:id="@+id/questionBtn"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:contentDescription="질문"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/albumBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/questionicon" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>