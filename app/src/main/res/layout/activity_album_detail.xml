<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#FFF7D2"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="0.1"
        android:id="@+id/relLayout1"
        app:layout_constraintBottom_toTopOf="@+id/pager_images"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/profile_photo"
            android:layout_marginTop="20dp"
            app:civ_border_color="@color/black"
            app:civ_border_width="0.5dp"
            android:src="@drawable/img"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="담담이"
            android:layout_toRightOf="@+id/profile_photo"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/username"
            android:textColor="@color/black"
            />
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_morebutton"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:id="@+id/ivEllipses"/>
    </RelativeLayout>


    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager_images"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintVertical_weight="0.5"
        android:scaleType="fitXY"
        android:clipToPadding="false"
        android:clipChildren="false"
        app:layout_constraintBottom_toTopOf="@+id/indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relLayout1"/>

    <me.relex.circleindicator.CircleIndicator3
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintVertical_weight="0.05"
        android:scaleType="centerCrop"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/relLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pager_images"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/relLayout3"
        app:layout_constraintVertical_weight="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/indicator"
        android:padding="20dp"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/image_title"
            android:layout_marginTop="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_title"
            android:text="mitch.tabian moutains #mountains"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:id="@+id/image_caption"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 DAYS AGO"
            android:textColor="@color/grey"
            android:textSize="18sp"
            android:layout_below="@+id/image_caption"
            android:id="@+id/image_time_posted"
            android:layout_marginTop="15dp"/>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>