<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:background="@drawable/dialog_background">

    <TextView
        android:id="@+id/thisdayText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_1"
        android:letterSpacing="0.15"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:text="- 로그아웃 -"
        android:gravity="center"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/dialogtextView"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_1"
        android:letterSpacing="0.15"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:maxLines="8"
        android:scrollbars="vertical"
        android:paddingBottom="20dp"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:text="로그아웃 하시겠습니까?"
        android:textSize="20dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/thisdayText"
        app:layout_constraintBottom_toTopOf="@id/closeBtn"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/logoutBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_button"
        android:fontFamily="@font/font_1"
        android:padding="12dp"
        android:text="예"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:layout_marginBottom="7dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/closeBtn"
        app:layout_constraintTop_toBottomOf="@+id/dialogtextView"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/closeBtn"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@drawable/white_rounded_button"
        android:fontFamily="@font/font_1"
        android:padding="12dp"
        android:layout_marginRight="20dp"
        android:text="아니오"
        android:textSize="20dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/logoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialogtextView" />


</androidx.constraintlayout.widget.ConstraintLayout>
